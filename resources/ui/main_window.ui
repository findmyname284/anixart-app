<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.18" />
    <requires lib="libadwaita" version="1.0" />
    <object class="AdwApplicationWindow" id="main_window">
        <property name="title">Главное окно</property>
        <child>
            <object class="GtkBox" id="main_content">
                <child>
                    <object class="GtkLabel" id="welcome_label">
                        <property name="label">Добро пожаловать!</property>
                    </object>
                </child>
                <child>
                    <object class="GtkBox" id="premium_section">
                        <child>
                            <object class="GtkLabel" id="premium_label">
                                <property name="label">Премиум-контент</property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </object>
</interface>